{% extends 'base.html.twig' %}
{% import 'extra/macro/btn.html.twig' as btn %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>
    {{ btn.standard(path('category_new'), "info", "Add") }}


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        {{ btn.list_action('ROLE_CATEGORY_READ',path('category_show', {'id': category.id}), "primary", "Show") }}
                        {{ btn.list_action('ROLE_CATEGORY_UPDATE',path('category_edit', {'id': category.id}), "success", "Edit") }}
                        {{ btn.list_action('ROLE_CATEGORY_DELETE',path('category_delete', {'id': category.id}), "danger", "Delete") }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
